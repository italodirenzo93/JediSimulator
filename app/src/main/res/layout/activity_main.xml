<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.idirenzo.mobiledev.jedisimulator.MainActivity"
    android:background="@drawable/background">

    <Button
        android:text="Help/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonHelpAbout"
        android:onClick="onClick" />

    <Button
        android:text="&lt;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPreviousSaber"
        android:layout_alignBaseline="@+id/buttonSaber"
        android:layout_alignBottom="@+id/buttonSaber"
        android:layout_alignParentStart="true"
        android:onClick="cycleSaberColour"/>

    <Button
        android:text="&gt;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNextSaber"
        android:layout_alignBaseline="@+id/buttonSaber"
        android:layout_alignBottom="@+id/buttonSaber"
        android:layout_alignParentEnd="true"
        android:onClick="cycleSaberColour"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/buttonSaber"
        android:onClick="toggleLightSaber"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save Colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSaveColour"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
